def encrypt(text, shift):
    encrypted_text = ""
    for char in text:
        if char.isalpha():
            # Shift character and wrap around within alphabet range
            shift_start = ord('A') if char.isupper() else ord('a')
            encrypted_text += chr((ord(char) - shift_start + shift) % 26 + shift_start)
        else:
            # If character is not a letter, don't change it
            encrypted_text += char
    return encrypted_text

def decrypt(text, shift):
    # Decrypt by shifting in the opposite direction
    return encrypt(text, -shift)

def main():
    while True:
        choice = input("Do you want to (e)ncrypt or (d)ecrypt? (e/d): ").lower()
        if choice in ['e', 'd']:
            message = input("Enter your message: ")
            shift = int(input("Enter the shift value: "))
            if choice == 'e':
                print("Encrypted message:", encrypt(message, shift))
            else:
                print("Decrypted message:", decrypt(message, shift))
        else:
            print("Invalid choice. Please enter 'e' for encryption or 'd' for decryption.")
        
        again = input("Do you want to encrypt/decrypt another message? (y/n): ").lower()
        if again != 'y':
            print("Goodbye!")
            break

if _name_ == "_main_":
    main()
